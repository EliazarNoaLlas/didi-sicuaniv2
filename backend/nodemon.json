{
  "watch": [
    "server.js",
    "config",
    "controllers",
    "middleware",
    "models",
    "routes",
    "services",
    "utils"
  ],
  "ext": "js,json",
  "ignore": [
    "node_modules/**",
    "*.log",
    "*.test.js",
    "test-*.js",
    ".env",
    ".git",
    "coverage",
    "dist",
    "build"
  ],
  "exec": "node server.js",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000
}

